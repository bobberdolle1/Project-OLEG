# Конфигурация Олега для Docker
# Скопируй это в .env и отредактируй значения

# ============================================
# Telegram Bot
# ============================================
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE
OWNER_ID=YOUR_TELEGRAM_ID_HERE

# ============================================
# Ollama Configuration
# ============================================
# Для Docker используй имя сервиса вместо localhost
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_BASE_MODEL=gemini-3-flash-preview:cloud   # Основная модель для текста
OLLAMA_VISION_MODEL=qwen3-vl:235b-cloud  # Модель для анализа изображений
OLLAMA_MEMORY_MODEL=gemini-3-flash-preview:cloud   # Модель для поиска в памяти и RAG
OLLAMA_TIMEOUT=90

# ============================================
# Database
# ============================================
# SQLite (по умолчанию)
DATABASE_URL=sqlite+aiosqlite:///./data/oleg.db

# PostgreSQL (раскомментируй и используй если включен сервис postgres)
# DATABASE_URL=postgresql+asyncpg://oleg:changeme@postgres:5432/oleg_db

# ============================================
# Redis (для кэширования и rate limiting)
# ============================================
REDIS_ENABLED=true
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================
# Rate Limiting
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=10
RATE_LIMIT_WINDOW=60

# ============================================
# Toxicity Analysis
# ============================================
TOXICITY_ANALYSIS_ENABLED=true
TOXICITY_THRESHOLD=75

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/oleg.log

# ============================================
# Metrics (Prometheus)
# ============================================
METRICS_ENABLED=true
METRICS_PORT=9090

# ============================================
# Application Settings
# ============================================
TIMEZONE=Europe/Moscow

# ============================================
# Media Features
# ============================================
# Распознавание голосовых сообщений (требует ffmpeg)
VOICE_RECOGNITION_ENABLED=true
WHISPER_MODEL=base  # tiny, base, small, medium, large (больше = точнее, но медленнее)

# Автозагрузка видео/аудио по ссылкам (YouTube, TikTok, VK и др.)
CONTENT_DOWNLOAD_ENABLED=true
