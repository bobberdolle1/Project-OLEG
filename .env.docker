# Конфигурация Олега для Docker
# Скопируй это в .env и отредактируй значения

# ============================================
# Telegram Bot
# ============================================
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE
OWNER_ID=YOUR_TELEGRAM_ID_HERE

# ============================================
# Ollama Configuration
# ============================================
# Для Docker используй имя сервиса вместо localhost
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_BASE_MODEL=deepseek-v3.1:671b-cloud  # Основная модель для текста
OLLAMA_VISION_MODEL=qwen3-vl:4b-instruct  # Модель для анализа изображений
OLLAMA_MEMORY_MODEL=glm-4.6:cloud  # Модель для поиска в памяти и RAG
OLLAMA_TIMEOUT=90

# ============================================
# Database
# ============================================
# SQLite (по умолчанию)
DATABASE_URL=sqlite:///./data/oleg.db

# PostgreSQL (раскомментируй и используй если включен сервис postgres)
# DATABASE_URL=postgresql+asyncpg://oleg:password@postgres:5432/oleg_db

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/oleg.log

# ============================================
# Application Settings
# ============================================
TIMEZONE=Europe/Moscow
