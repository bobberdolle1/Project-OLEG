# Конфигурация Олега для Docker
# Скопируй это в .env и отредактируй значения

# ============================================
# Telegram Bot
# ============================================
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE
PRIMARY_CHAT_ID=YOUR_CHAT_ID_HERE
SUMMARY_TOPIC_ID=YOUR_SUMMARY_TOPIC_ID_HERE
CREATIVE_TOPIC_ID=YOUR_CREATIVE_TOPIC_ID_HERE

# ============================================
# Ollama Configuration
# ============================================
# Для Docker используй имя сервиса вместо localhost
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=deepseek-v3.1:671b-cloud
OLLAMA_TIMEOUT=300

# ============================================
# Database
# ============================================
# SQLite (по умолчанию)
DATABASE_URL=sqlite:///./data/oleg.db

# PostgreSQL (раскомментируй и используй если включен сервис postgres)
# DATABASE_URL=postgresql+asyncpg://oleg:password@postgres:5432/oleg_db

# ============================================
# Logging
# ============================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/oleg.log

# ============================================
# Application Settings
# ============================================
TIMEZONE=Europe/Moscow
