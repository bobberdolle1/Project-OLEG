# Telegram Bot Configuration
# https://t.me/BotFather для получения токена
TELEGRAM_BOT_TOKEN=YOUR_BOT_TOKEN_HERE

# ID владельца бота для полного доступа
# Узнать свой ID можно у @userinfobot или @getmyid_bot
# Владелец имеет доступ к команде /owner с панелью управления:
# - Включение/выключение функций бота
# - Рассылка сообщений
# - Статус системы
# - Управление чатами
# - Экстренные действия
OWNER_ID=YOUR_TELEGRAM_ID_HERE

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_BASE_MODEL=deepseek-v3.1:671b-cloud  # Основная модель для текста
OLLAMA_VISION_MODEL=qwen3-vl:235b-cloud  # Модель для анализа изображений
OLLAMA_MEMORY_MODEL=glm-4.6:cloud  # Модель для поиска в памяти и RAG
OLLAMA_TIMEOUT=90
OLLAMA_WEB_SEARCH_ENABLED=true  # Включить веб-поиск для актуальной информации

# Fallback модели (локальные, когда cloud недоступен)
OLLAMA_FALLBACK_ENABLED=true  # Включить автопереключение на локальные модели
OLLAMA_FALLBACK_MODEL=qwen3:8b  # Резервная модель для текста
OLLAMA_FALLBACK_VISION_MODEL=qwen3-vl:4b-instruct  # Резервная модель для vision
OLLAMA_FALLBACK_MEMORY_MODEL=qwen3:8b  # Резервная модель для памяти

# ChromaDB Configuration (для RAG - "Мозг Олега")
CHROMADB_PERSIST_DIR=./data/chroma  # Директория для сохранения данных ChromaDB
CHROMADB_COLLECTION_NAME=oleg_kb  # Название коллекции для базы знаний
EMBEDDING_MODEL=all-MiniLM-L6-v2  # Модель для генерации эмбеддингов
SIMILARITY_THRESHOLD=0.7  # Порог схожести для RAG (0.0 - 1.0)

# Database Configuration
# Для SQLite (по умолчанию):
DATABASE_URL=sqlite+aiosqlite:///./data/oleg.db
# Для PostgreSQL (рекомендуется для продакшена):
# DATABASE_URL=postgresql+asyncpg://oleg:changeme@localhost:5432/oleg_db

# Redis Configuration (для кэширования и rate limiting)
REDIS_ENABLED=false  # Включить Redis (true/false)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=  # Оставь пустым если без пароля

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=10  # Максимум запросов
RATE_LIMIT_WINDOW=60  # За период (секунды)

# Toxicity Analysis
TOXICITY_ANALYSIS_ENABLED=true
TOXICITY_THRESHOLD=75  # Порог токсичности (0-100)

# Timezone Configuration
TIMEZONE=Europe/Moscow

# Logging Configuration
# Уровень: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=logs/oleg.log

# Metrics (Prometheus)
METRICS_ENABLED=false  # Включить HTTP endpoint для метрик
METRICS_PORT=9090  # Порт для /metrics, /health, /ready

# Media Features
VOICE_RECOGNITION_ENABLED=true  # Включить распознавание голосовых (требует openai-whisper)
WHISPER_MODEL=base  # Модель Whisper: tiny, base, small, medium, large
CONTENT_DOWNLOAD_ENABLED=true  # Включить автозагрузку видео/аудио по ссылкам
